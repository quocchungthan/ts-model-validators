{
  "compilerOptions": {
    "target": "es5",  
    "module": "commonjs",
    "declaration": true, 
    "declarationMap": true,
    "outDir": "./dist",                     
    "strict": true,                      
    "baseUrl": "./",                     
    "paths": {
      "@r/*": ["rules/*"],
      "@h/*": ["helpers/*"],
      "@f/*": ["factories/*"]
    },                         
    "esModuleInterop": true,    
    "experimentalDecorators": true,    
    "skipLibCheck": true,                  
    "forceConsistentCasingInFileNames": true  
  }
}
